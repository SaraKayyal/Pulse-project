    <body>
        <!-- Member Menu -->
        <div class="menu_tem_member">
            <ul>
                <li><a href="/logged">HOME</a></li>
                <li><a href="/projects">PROJECTS</a></li>
                <li><a href="/teams">TEAMS</a></li>
                <li><a href="#">REPORTS</a></li>
                <li><a href="/pulse/logout">LOGOUT</a></li>
            </ul>
        </div>

    <div class="content">
        <h1 style="text-align: center;">Report review</h1>
        <h2 style="text-align: center;">Here you can see the report based on the user you selected!</h2>
        <h3 style="text-align: center;">You can only write on comment if you write 
            another one you will be redirect and the comment will not be stored.</h3>

        <div class="survey-form">
            <form method="post" action="/review/report">
                <% for (const row of all) { %>
                    <div class="report-container">
                        <input type="hidden" name="report_id" value="<%= row.rapport_id %>">
                        <div class="report-status">
                            <label for="status_<%= row.rapport_id %>">Status:</label>
                            <input type="text" name="status_<%= row.rapport_id %>" id="status_<%= row.rapport_id %>" value="<%= row.status %>">
                        </div>
                        <div class="report-content">
                            <label for="content_<%= row.rapport_id %>">Content:</label>
                            <textarea name="content_<%= row.rapport_id %>" id="content_<%= row.rapport_id %>"><%= row.content %></textarea>
                        </div>
                        <div class="comment">
                            <label for="comment">Comment:</label>
                            <textarea name="comment" id="comment"></textarea>
                        </div>
                    </div>
                <% } %>
                <div class="submit-button">
                    <input type="submit" value="Submit Review" class="create-order-btn">
                </div>
            </form>
        </div>
    </td>
</body>

