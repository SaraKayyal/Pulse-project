<%- include("./../partials/header.ejs") %>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>Teams</title>
    <link rel="stylesheet" 
    href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">

    <link rel="stylesheet" href="style2.css">
    <script src="https://cdn.lordicon.com/bhenfmcm.js"></script>

</head>

<body>
    <input type="checkbox" id="nav-toggle">
    <div class="sidebar">
        <div class="sidebar-brand">
            <h2><span class="lab la-accusoft"></span><span>MASAR</span></h2>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <a href="/logged">
                        <span class="las la-igloo"></span>
                        <span>Dashboard</span></a>
                </li>
                <li>
                    <a href="/teams"class="active">
                        <span class="las la-people-carry"></span>
                        <span>Teams</span></a>
                </li>
                <li>
                    <a href="/members">
                        <span class="las la-users"></span>
                        <span>Members</span></a>
                </li>
                <li>
                    <a href="/projects">
                        <span class="las la-clipboard-list"></span>
                        <span>Projects</span></a>
                </li>
                <li>
                    <a href="/register/members">
                        <span class="las la-user"></span>
                        <span>Register members</span></a>
                </li>
                <li>
                    <a href="/submitted/reports">
                        <span class="las la-receipt"></span>
                        <span>Reports</span></a>
                </li>
                <li>
                    <a href='/pulse/logout'>
                        <span class="la la-sign-out" aria-hidden="true"></span>
                        <span>Logout</span></a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-content">
        <header>
            <h2>
                <label for="nav-toggle">
                    <span class="las la-bars"></span>
                </label>

                Teams
            </h2>
            <div class="user-wrapper">
                <img src="2.jpg" width="40px" height="40px" alt="">
                <div>
                    <h4>Usman</h4>
                    <small>Super admin</small>
                </div>
            </div>
        </header>
    </div>

    <div class="content">
        <br>
        <br>
        <br>
        <br>
        <h1 style="text-align: center;">Teams</h1>
        <h2 style="text-align: center;">Here you can see all the teams!</h2>
        <h3 style="text-align: center;">Press at this
            <a href="/create/team">
                <lord-icon
                    src="https://cdn.lordicon.com/uukerzzv.json"
                    trigger="hover"
                    colors="primary:prule,secondary:#08a88a"
                    style="width: 50px; height: 50px;"
                    role="button"
                    tabindex="0"
                ></lord-icon>
            </a> to create a team
        </h3>
    
        <div class="table-container">
            <table>
                <tr>
                    <th>Team ID</th>
                    <th>Name</th>
                    <th>The members/member</th>
                </tr>
                <% for (const row of all) { %>
                    <tr>
                        <td><%= row.team_id %></td>
                        <td><%= row.team_name %></td>
                        <td>
                            <% if (typeof row.team_members === 'string') { %>
                                <%= row.team_members.split(',').map(member => member.trim()).join(',  ') %>
                            <% } else { %>
                                No Members
                            <% } %>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </td>
</body>

<%- include("./../partials/footer.ejs") %>
</html>
