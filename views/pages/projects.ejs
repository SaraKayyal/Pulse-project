<%- include("./../partials/header.ejs") %>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>Teams</title>
    <link rel="stylesheet" 
    href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <link rel="stylesheet" href="style2.css">
    <script src="https://cdn.lordicon.com/bhenfmcm.js"></script>

</head>

<body>
    <input type="checkbox" id="nav-toggle">
    <div class="sidebar">
        <div class="sidebar-brand">
            <h2><span class="lab la-accusoft"></span><span>MASAR</span></h2>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <a href="/logged">
                        <span class="las la-igloo"></span>
                        <span>Dashboard</span></a>
                </li>
                <li>
                    <a href="/teams">
                        <span class="las la-people-carry"></span>
                        <span>Teams</span></a>
                </li>
                <li>
                    <a href="/members">
                        <span class="las la-users"></span>
                        <span>Members</span></a>
                </li>
                <li>
                    <a href="/projects"class="active">
                        <span class="las la-clipboard-list"></span>
                        <span>Projects</span></a>
                </li>
                <li>
                    <a href="/register/members">
                        <span class="las la-user"></span>
                        <span>Register members</span></a>
                </li>
                <li>
                    <a href="/submitted/reports">
                        <span class="las la-receipt"></span>
                        <span>Reports</span></a>
                </li>
                <li>
                    <a href='/pulse/logout'>
                        <span class="la la-sign-out" aria-hidden="true"></span>
                        <span>Logout</span></a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-content">
        <header>
            <h2>
                <label for="nav-toggle">
                    <span class="las la-bars"></span>
                </label>

                Teams
            </h2>
            <div class="user-wrapper">
                <img src="2.jpg" width="40px" height="40px" alt="">
                <div>
                    <h4>Usman</h4>
                    <small>Super admin</small>
                </div>
            </div>
        </header>
    </div>

    <div class="content">
        <br>
        <br>
        <br>
        <br>
        <h1 style="text-align: center;">Projects</h1>
        <h2 style="text-align: center;">Here you can see all the projects!</h2>
        <h3 style="text-align: center;">Press at this
            <a href="/create/project">
                <lord-icon
                    src="https://cdn.lordicon.com/mecwbjnp.json"
                    trigger="hover"
                    colors="primary:prule,secondary:#08a88a"
                    style="width: 40px; height: 40px;"
                    role="button"
                    tabindex="0"
                ></lord-icon>
            </a> to create a new project
        </h3>
        <h4 style="text-align: center;">Do not forget you must have a team/teams before creating a project</h4>
    
        <div class="table-container">
            <table>
                <tr>
                    <th>Name</th>
                    <th>Team</th>
                    <th>Start date</th>
                    <th>End date</th>
                    <th>Reporting Frequency</th>
                    <th>First reporting date</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Update</th>
                </tr>
                <% for (const row of all) { %>
                    <tr>
                        <td><%= row.name %></td>
                        <td><%= row.team_id %></td>
                        <td><%= row.start_date %></td>
                        <td><%= row.end_date %></td>
                        <td><%= row.reporting_freq %></td>
                        <td><%= row.formatted_reporting_date %></td>
                        <td>
                            <% if(row.description) { %>
                                <%= row.description %>
                                <% } else { %>
                                    No description
                                <% } %>
                        </td>
                        <td><%= row.status %></td>
                        <td>
                            <a href="/projects/update/<%= row.name %>"><i class="fas fa-edit custom-icon2"></i></a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </td>
</body>

</html>
<%- include("./../partials/footer.ejs") %>

