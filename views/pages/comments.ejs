<%- include("./../partials/header.ejs") %>


    <link rel="stylesheet" href="/style2.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
        <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    

    <input type="checkbox" id="nav-toggle">
    <div class="sidebar">
        <div class="sidebar-brand">
            <h2><span class="lab la-accusoft"></span><span>MASAR</span></h2>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <a href="/dashboard/team_member">
                        <span class="las la-igloo"></span>
                        <span>Dashboard</span></a>
                </li>
                <li>
                    <a href="/Your/projects">
                        <span class="las la-clipboard-list"></span>
                        <span>Project Info</span></a>
                </li>
                <li>
                    <a href="/due/report">
                        <span class="las la-tasks"></span>
                        <span>Due dates</span></a>
                </li>
                <li>
                    <a href='/pulse/logout'>
                        <span class="la la-sign-out" aria-hidden="true"></span>
                        <span>Logout</span></a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-content">
        <header>
            <h2>
                <label for="nav-toggle">
                    <span class="las la-bars"></span>
                </label>

                Feedback Info
            </h2>

            <div class="user-wrapper">
                <div>
                    <h4><%= userName %></h4>
                    <small>Team member</small>
                </div>
            </div>
        </header>
    </div>

    <div class="content">
        <br>
        <br>
        <br>
        <br>
        <h1 style="text-align: center;">Feedback</h1>
        <h2 style="text-align: center;">Here you can see the feedback from your manager!</h2>
        <h2 style="text-align: center;">Press at the icon on "Review the feedback" to read the feedback on the report</h2>

        <div class="table-container">
            <table>
                <tr>
                    <th>Project name</th>
                    <th>Due date</th>
                    <th>Submitted at</th>
                    <th>Feedback</th>
                    <th>Status</th>
                    <th>Seen/not seen</th>
                </tr>
                <% for (const row of all) { %>
                    <tr>
                        <td><%= row.project_name %></td>
                        <td><%= row.submission_date %></td>
                        <td>
                            <% if (row.submitted_at) { %>
                                <%= row.submitted_at %>
                            <% } else { %>
                                No date yet
                            <% } %>
                        </td>
                        <td>
                            <% if (row.comments) { %>
                                <%= row.comments %>
                            <% } else { %>
                                No feedback yet
                            <% } %>
                        </td>
                        <td>
                            <span class="
                                <% if (row.status === 'On time') { %>
                                    status-finished
                                <% } else if (row.status === 'Late') { %>
                                    status-Late
                                <% } else if (row.status === 'Early') { %>
                                    status-on-hold
                                <% } %>"
                            >
                                <%= row.status %>
                            </span>
                        </td>
                        <td>
                            <span class="
                                <% if (row.reviewed === 'Read') { %>
                                    status-finished
                                <% } else if (row.reviewed === 'Unread') { %>
                                    status-on-hold
                                <% } %>"
                            >
                                <%= row.reviewed %>
                            </span>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </td>
</body>

</html>
<%- include("./../partials/footer.ejs") %>

