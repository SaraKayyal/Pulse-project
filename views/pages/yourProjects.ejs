<link rel="stylesheet" href="/style2.css">
<link rel="stylesheet"
        href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">


<body>

    <input type="checkbox" id="nav-toggle">
    <div class="sidebar">
        <div class="sidebar-brand">
            <h2><span class="lab la-accusoft"></span><span>MASAR</span></h2>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <a href="/dashboard/team_member">
                        <span class="las la-igloo"></span>
                        <span>Dashboard</span></a>
                </li>
                <li>
                    <a href="/Your/projects"class="active">
                        <span class="las la-clipboard-list"></span>
                        <span>Project Info</span></a>
                </li>
                <li>
                    <a href="/due/report">
                        <span class="las la-tasks"></span>
                        <span>Due dates</span></a>
                </li>
                <li>
                    <a href='/pulse/logout'>
                        <span class="la la-sign-out" aria-hidden="true"></span>
                        <span>Logout</span></a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-content">
        <header>
            <h2>
                <label for="nav-toggle">
                    <span class="las la-bars"></span>
                </label>

                Projects Info
            </h2>

            <div class="user-wrapper">
                <div>
                    <h4><%= memberName.name %></h4>
                    <small>Team member</small>
                </div>
            </div>
        </header>
    </div>

    <div class="content">
        <br>
        <br>
        <br>
        <br>
        <h1 style="text-align: center;">Projects</h1>
        <h2 style="text-align: center;">Here you can see your projects!</h2>
        <h3 style="text-align: center;">Press at "See feedback" to see the feedback you got!</h3>
        <h3 style="text-align: center;">Press at "Write a report" to write and submit your report!</h3>
        <br>
        <div class="table-container">
            <table>
                <tr>
                    <th>Name</th>
                    <th>Team</th>
                    <th>Start date</th>
                    <th>End date</th>
                    <th>Reporting Frequency</th>
                    <th>First reporting date</th>
                    <th>Description</th>
                    <th>Project status</th>
                    <th>Write a report</th>
                    <th>See feedback</th>
                </tr>
                <% for (const project of projects) { %>
                    <tr>
                        <td><%= project.name %></td>
                        <td><%= project.team_id %></td>
                        <td><%= project.start_date %></td>
                        <td><%= project.end_date %></td>
                        <td><%= project.reporting_freq %></td>
                        <td><%= project.reporting_date %></td>
                        <td>
                            <% if(project.description) { %>
                                <%= project.description %>
                                <% } else { %>
                                    No description
                                <% } %>
                        </td>
                        <td><%= project.status %></td>
                        <td>
                            <a href="/write/report?project_id=<%= project.project_id %>"><i class="las la-file-contract custom-icon"></i></a>
                        </td>
                        <td>
                            <a href="/feedback">
                                <i class="las la-comment-dots custom-icon"></i>
                            </a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
</body>
