<link rel="stylesheet" href="/style2.css">
<link rel="stylesheet"
        href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">


<body>

    <input type="checkbox" id="nav-toggle">
    <div class="sidebar">
        <div class="sidebar-brand">
            <h2><span class="lab la-accusoft"></span><span>MASAR</span></h2>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <a href="/dashboard/team_member">
                        <span class="las la-igloo"></span>
                        <span>Dashboard</span></a>
                </li>
                <li>
                    <a href="/Your/projects">
                        <span class="las la-clipboard-list"></span>
                        <span>Project Info</span></a>
                </li>
                <li>
                    <a href="/due/report" class="active">
                        <span class="las la-tasks"></span>
                        <span>Due dates</span></a>
                </li>
                <li>
                    <a href='/pulse/logout'>
                        <span class="la la-sign-out" aria-hidden="true"></span>
                        <span>Logout</span></a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-content">
        <header>
            <h2>
                <label for="nav-toggle">
                    <span class="las la-bars"></span>
                </label>

                Due dates
            </h2>

            <div class="user-wrapper">
                <div>
                    <h4><%= memberName.name %></h4>
                    <small>Team member</small>
                </div>
            </div>
        </header>
    </div>

    <div class="content">
        <br>
        <br>
        <br>
        <br>
        <h1 style="text-align: center;">Due dates</h1>
        <h2 style="text-align: center;">Here you will be able to see the dates to submit your reports!</h2>
        <br>
        <div class="table-container">
            <table>
                <tr>
                    <th>Name</th>
                    <th>Reporting Frequency</th>
                    <th>Due dates</th>
                </tr>
                <% for (const project of projects) { %>
                    <tr>
                        <td><%= project.name %></td>
                        <td><%= project.reporting_freq %></td>
                        <td><%= project.submission_dates %></td>
                    </tr>
                <% } %>
            </table>
        </div>