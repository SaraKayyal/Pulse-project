<link rel="stylesheet" href="/style2.css">
<link rel="stylesheet"
        href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">


<body>

    <input type="checkbox" id="nav-toggle">
    <div class="sidebar">
        <div class="sidebar-brand">
            <h2><span class="lab la-accusoft"></span><span>MASAR</span></h2>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <a href="/dashboard/team_member" class="active">
                        <span class="las la-igloo"></span>
                        <span>Dashboard</span></a>
                </li>
                <li>
                    <a href="/Your/projects">
                        <span class="las la-clipboard-list"></span>
                        <span>Project Info</span></a>
                </li>
                <li>
                    <a href="/due/report">
                        <span class="las la-tasks"></span>
                        <span>Due dates</span></a>
                </li>
                <li>
                    <a href='/pulse/logout'>
                        <span class="la la-sign-out" aria-hidden="true"></span>
                        <span>Logout</span></a>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-content">
        <header>
            <h2>
                <label for="nav-toggle">
                    <span class="las la-bars"></span>
                </label>

                Dashboard
            </h2>
            <div class="search-wrapper">
                <span class="las la-search"></span>
                <input type="search" placeholder="Search Here" />
            </div>

            <div class="user-wrapper">
                <div>
                    <h4><%= memberName.name %></h4>
                    <small>Team member</small>
                </div>
            </div>
        </header>
        <main>
            <div class="cards">
                <div class="card-single">
                    <div>
                        <h1>
                            <%= projectCount || '0' %>
                        </h1>
                        <span>Your projects</span>
                    </div>
                    <div>
                        <span class="las la-clipboard-list"></span>
                    </div>
                </div>
                <div class="card-single">
                    <div>
                        <h1>
                            <%= countReport || '0' %>
                        </h1>
                        <span>Reports</span>
                    </div>
                    <div>
                        <span class="las la-receipt"></span>
                    </div>
                </div>
                <div class="card-single">
                    <div>
                        <h1>
                            <%= feedback || '0' %>
                        </h1>
                        <span>Feedback</span>
                    </div>
                    <div>
                        <span class="las la-comments"></span>
                    </div>
                </div>
                <div class="card-single">
                    <div>
                        <span>Due dates</span>
                    </div>
                    <div>
                        <span class="las la-tasks"></span>
                    </div>
                </div>
            </div>
            <div class="recent-grid">
                <div class="projects">
                    <div class="card">
                        <div class="card-header">
                            <h3>Recent Projects</h3>

                            <a href="/Your/projects">
                                <button>See all <span class="las la-arrow-right">
                                    </span></button>
                            </a>
                        </div>

                        <div class="table-responsive">
                            <table width="100%">
                                <thead>
                                    <tr>
                                        <td>Project Title</td>
                                        <td>Department</td>
                                        <td>Status</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (recentProjects.length> 0) { %>
                                        <% for (const project of recentProjects) { %>
                                            <tr>
                                                <td>
                                                    <%= project.project_name %>
                                                </td>
                                                <td>
                                                    <%= project.team_name %>
                                                </td>
                                                <td>
                                                    <span class="
                                                        <% if (project.project_status === 'Completed') { %>
                                                            status-finished
                                                        <% } else if (project.project_status === 'In Progress') { %>
                                                            status-in-progress
                                                        <% } else if (project.project_status === 'Planning') { %>
                                                            status-on-hold
                                                        <% } %>"
                                                    >
                                                        <%= project.project_status %>
                                                    </span>
                                                </td>
                                            </tr>
                                            <% } %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="3">No projects available</td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="recent-grid">
                <div class="Notifications">
                    <div class="card">
                        <div class="card-header">
                            <h3>Recent Feedback</h3>

                            <a href="/Your/projects">
                                <button>See all <span class="las la-arrow-right">
                                    </span></button>
                            </a>
                        </div>
                        <div class="table-responsive">
                            <table width="100%">
                                <thead>
                                    <tr>
                                        <td>Project Title</td>
                                        <td>Submitted at</td>
                                        <td>Comment</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (const project of recentFeedback) { %>
                                        <% if (project.comment) { %>
                                            <tr>
                                                <td>
                                                    <%= project.project_name %>
                                                </td>
                                                <td>
                                                    <%= project.submitted_at %>
                                                </td>
                                                <td>
                                                    <%= project.comment %>
                                                </td>
                                            </tr>
                                        <% } %>
                                    <% } %>
                                    <% if (!recentFeedback.some(project => project.comment)) { %>
                                        <tr>
                                            <td colspan="3">No feedback available</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                        
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>