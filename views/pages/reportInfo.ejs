<%- include("./../partials/header.ejs") %>


    <link rel="stylesheet" href="/style2.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
        <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    

    <input type="checkbox" id="nav-toggle">
    <div class="sidebar">
        <div class="sidebar-brand">
            <h2><span class="lab la-accusoft"></span><span>MASAR</span></h2>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <a href="/logged">
                        <span class="las la-igloo"></span>
                        <span>Dashboard</span></a>
                </li>
                <li>
                    <a href="/teams">
                        <span class="las la-people-carry"></span>
                        <span>Teams</span></a>
                </li>
                <li>
                    <a href="/members">
                        <span class="las la-users"></span>
                        <span>Members</span></a>
                </li>
                <li>
                    <a href="/projects">
                        <span class="las la-clipboard-list"></span>
                        <span>Projects</span></a>
                </li>
                <li>
                    <a href="/register/members">
                        <span class="las la-user"></span>
                        <span>Register members</span></a>
                </li>
                <li>
                    <a href="/submitted/reports"class="active">
                        <span class="las la-receipt"></span>
                        <span>Reports</span></a>
                </li>
                <li>
                    <a href='/pulse/logout'>
                        <span class="la la-sign-out" aria-hidden="true"></span>
                        <span>Logout</span></a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-content">
        <header>
            <h2>
                <label for="nav-toggle">
                    <span class="las la-bars"></span>
                </label>

                Reports
            </h2>
            <div class="user-wrapper">
                <div>
                    <h4>Usman</h4>
                    <small>Super admin</small>
                </div>
            </div>
        </header>
    </div>

    <div class="content">
        <br>
        <br>
        <br>
        <br>
        <h1 style="text-align: center;">Reports</h1>
        <h2 style="text-align: center;">Here you can see all the reports!</h2>
        <h2 style="text-align: center;">Press at the icon on "Review the report" to read and give feedback on the report</h2>

        <div class="table-container">
            <table>
                <tr>
                    <th>Member name</th>
                    <th>Team</th>
                    <th>Project ID</th>
                    <th>Due date</th>
                    <th>Submitted at</th>
                    <th>Status of the report</th>
                    <th>Review the report</th>
                </tr>
                <% for (const row of all) { %>
                    <tr>
                        <td><%= row.user_name %></td>
                        <td><%= row.team_name %></td>
                        <td><%= row.project_id %></td>
                        <td><%= row.submission_date %></td>
                        <td><%= row.submitted_at %></td>
                        <td>
                            <span class="
                                <% if (row.status === 'On time') { %>
                                    status-finished
                                <% } else if (row.status === 'Late') { %>
                                    status-Late
                                <% } else if (row.status === 'Early') { %>
                                    status-on-hold
                                <% } %>"
                            >
                                <%= row.status %>
                            </span>
                        <td>
                            <a href="/review/report?user=<%= row.user_name %>&date=<%= row.submission_date %>">
                                <i class="las la-clipboard custom-icon"></i></a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </td>
</body>

</html>
