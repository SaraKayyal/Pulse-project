<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>Dashboard</title>
    <link rel="stylesheet"
        href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="style2.css">
</head>

<body>

    <input type="checkbox" id="nav-toggle">
    <div class="sidebar">
        <div class="sidebar-brand">
            <h2><span class="lab la-accusoft"></span><span>MASAR</span></h2>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <a href="/logged" class="active">
                        <span class="las la-igloo"></span>
                        <span>Dashboard</span></a>
                </li>
                <li>
                    <a href="/teams">
                        <span class="las la-people-carry"></span>
                        <span>Teams</span></a>
                </li>
                <li>
                    <a href="/members">
                        <span class="las la-users"></span>
                        <span>Members</span></a>
                </li>
                <li>
                    <a href="/projects">
                        <span class="las la-clipboard-list"></span>
                        <span>Projects</span></a>
                </li>
                <li>
                    <a href="/register/members">
                        <span class="las la-user"></span>
                        <span>Register members</span></a>
                </li>
                <li>
                    <a href="/submitted/reports">
                        <span class="las la-receipt"></span>
                        <span>Reports</span></a>
                </li>
                <li>
                    <a href='/pulse/logout'>
                        <span class="la la-sign-out" aria-hidden="true"></span>
                        <span>Logout</span></a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-content">
        <header>
            <h2>
                <label for="nav-toggle">
                    <span class="las la-bars"></span>
                </label>

                Dashboard
            </h2>
            <div class="search-wrapper">
                <span class="las la-search"></span>
                <input type="search" placeholder="Search Here" />
            </div>

            <div class="user-wrapper">
                <img src="2.jpg" width="40px" height="40px" alt="">
                <div>
                    <h4>Usman</h4>
                    <small>Super admin</small>
                </div>
            </div>
        </header>

        <main>
            <div class="cards">
                <div class="card-single">
                    <div>
                        <h1>
                            <%= projectCount || '0' %>
                        </h1>
                        <span>projects</span>
                    </div>
                    <div>
                        <span class="las la-clipboard-list"></span>
                    </div>
                </div>
                <div class="card-single">
                    <div>
                        <h1>
                            <%= memberCount || '0' %>
                        </h1>
                        <span>Registered members</span>
                    </div>
                    <div>
                        <span class="las la-users"></span>
                    </div>
                </div>
                <div class="card-single">
                    <div>
                        <h1>
                            <%= reportCount || '0' %>
                        </h1>
                        <span>Reports</span>
                    </div>
                    <div>
                        <span class="las la-receipt"></span>
                    </div>
                </div>
                <div class="card-single">
                    <div>
                        <span>Teams</span>
                    </div>
                    <div>
                        <span class="lab la-teamspeak"></span>
                    </div>
                </div>
            </div>

            <div class="recent-grid">
                <div class="projects">
                    <div class="card">
                        <div class="card-header">
                            <h3>Recent Projects</h3>

                            <a href="/projects">
                                <button>See all <span class="las la-arrow-right">
                                    </span></button>
                            </a>
                        </div>

                        <div class="table-responsive">
                            <table width="100%">
                                <thead>
                                    <tr>
                                        <td>Project Title</td>
                                        <td>Department</td>
                                        <td>Status</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (projects.length> 0) { %>
                                        <% for (const project of projects) { %>
                                            <tr>
                                                <td>
                                                    <%= project.project_name %>
                                                </td>
                                                <td>
                                                    <%= project.team_name %>
                                                </td>
                                                <td>
                                                    <span class="
                                                        <% if (project.project_status === 'Completed') { %>
                                                            status-finished
                                                        <% } else if (project.project_status === 'In Progress') { %>
                                                            status-in-progress
                                                        <% } else if (project.project_status === 'Planning') { %>
                                                            status-on-hold
                                                        <% } %>"
                                                    >
                                                        <%= project.project_status %>
                                                    </span>
                                                </td>
                                            </tr>
                                            <% } %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="3">No projects available</td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


                <div class="register-members">
                    <div class="card">
                        <div class="card-header">
                            <h3>Members</h3>
                            <a href="/members">
                                <button>See all <span class="las la-arrow-right"></span></button>
                            </a>
                        </div>
                        <div class="card-body">
                            <% if (members.length> 0) { %>
                                <% members.forEach(function(member) { %>
                                    <div class="members">
                                        <div class="info">
                                            <img src="1.jpg" width="40px" height="40px" alt="">
                                            <div>
                                                <h4>
                                                    <%= member.name %>
                                                </h4>
                                                <small>
                                                    <%= member.role %>
                                                </small>
                                            </div>
                                        </div>
                                        <div class="contact">
                                            <span class="las la-user circle"></span>
                                            <span class="las la-comment"></span>
                                            <span class="las la-phone"></span>
                                        </div>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <p>No members yet</p>
                                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

        </main>
    </div>
</body>

</html>